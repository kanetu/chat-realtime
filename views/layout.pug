doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Document
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.6.3/css/all.css')
    // Material Design Bootstrap
    link(href='https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.6.0/css/mdb.min.css', rel='stylesheet')

    style.
      body{
      background: url('/images/background-chat.jpg');
      }
      #main{
      margin-top: 20px;
      }
      #content{
      width: 100%;
      background: lightgray;
      height: 350px;
      }
      #text-message{
      width: 90%;
      }
      .list-user{
      background: rgba(148, 148, 149, 0.4);
      border-radius: 5px
      }
      .list-user-has-not-joined,
      .list-user-content{
      list-style-type: none;
      padding: 0px 0px 10px 0px;
      max-height: 150px;
      overflow-x: hidden;
      -ms-overflow-style: none;
      overflow: -moz-scrollbars-none;
      }
      
      .list-user-has-not-joined li{
        background: #EF7E92;
        color: #fff;
        padding: 7px 20px;
        margin: 5px 0px;
        cursor: pointer;
        transition: .25s ease all;

      }
      .list-user-has-not-joined li:hover{
        background: #F25930;
      }
      .list-user-content li{
      cursor: pointer;
      padding: 7px 20px;
      position: relative;
      color: #fff;
      font-weight: bold;
      transition: .25s ease all;
      }
      .list-user-content li:hover{
      background: rgba(148, 148, 149, 0.6);
      }
      i.online{
      width: 10px;
      height: 10px;
      position: absolute;
      background: lightgreen;
      border-radius: 20px;
      top: 40%;
      right: 20%;
      }
      .title-list-user-content{
      padding: 15px 10px 0px 20px;
      color: #fff;
      }
      #main-message{
      background: rgba(255, 255, 255, 0.3);
      box-shadow: 0 2px 5px 0 rgba(0,0,0,.16), 0 2px 10px 0 rgba(0,0,0,.12);
      }
      .tabcontent{
      width: 100%;
      }
      .info-room{
      padding: 5px 20px;
      }
      .controls{
      position: relative;
      padding: 20px;
      }
      .input-text-message{
      width: 80%;
      border: none;
      display: inline;
      }
      .btn-send-message{
      border-radius: 20px;
      height: 37px;
      width: 10%;
      border: none;
      margin-left: 10px;
      background:rgba(255, 255, 255, 0.4);
      transition: .25s ease all;
      cursor: pointer;
      }
      .btn-send-message:hover{
      background:rgba(255, 255, 255, 0.5);
      transform: scale(1.1);
      }
      .messages{
      margin: 10px;
      padding: 10px;
      height: 400px;
      overflow-x: hidden;
      -ms-overflow-style: none;
      overflow: -moz-scrollbars-none;
      }
      .messages::-webkit-scrollbar { width: 0 !important }
      .list-user-content::-webkit-scrollbar { width: 0 !important }
      
      #create-room-btn{
      display:inline-flex;
      background:#5F9EA0;
      padding:5px;
      margin-left: 10px;
      cursor: pointer;
      border-radius:5px;
      }
      .mb-15{
      margin-bottom: 15px;
      }
      #lb-error-create-room{
      color:red;
      
      }
      .message-data {
      margin: 5px;
      font-size: 0.8rem;
      font-size: italic;
      }

      .message-data-time {
      color: lighten($gray, 8%);
      padding-left: 6px;
      }
      .message {      
      color: white;
      padding: 10px 20px;
      line-height: 26px;
      font-size: 16px;
      border-radius: 7px;
      width: fit-content;
      position: relative;
      background: #65C84A;
      }
      
    
  body
  block content
  // JQuery
  script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js')
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js')
  // Bootstrap tooltips
  script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js')
  // Bootstrap core JavaScript
  script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js')

  // MDB core JavaScript
  script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.6.0/js/mdb.min.js')

  script(src='/socket.io/socket.io.js')
  script(src='/javascripts/chat.js')
