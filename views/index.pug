extends layout

block content
    .container
      .row
        .col-md-9.col-xs-12.mt-20
          #main-message
            
        .col-md-3.col-xs-12.mt-20
          .list-user
            h5.title-list-user-content Member
            ul.list-user-content.tab#current-user
            h5.title-list-user-content Room
              #create-room-btn(data-toggle='modal', data-target='#create-room-modal') 
               i.fas.fa-plus(style='font-size:16px')

            ul.list-user-content.tab#room  
            h5.title-list-user-content Room Joined
            ul.list-user-content.tab#current-room
              
    // Modal
    #create-room-modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalCenterTitle', aria-hidden='true')
     .modal-dialog.modal-dialog-centered(role='document')
      .modal-content
       .modal-header
        h5#exampleModalLongTitle.modal-title Tạo Phòng
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') ×
       .modal-body
        .form-group
          label.col-form-label(for='room-name') Tên phòng:
          input#room-name.form-control(type='text', required)
        .container
          .row.mb-15
            .col-4 Loại phòng:
            .col-4.form-check
              label.form-check-label
                input.form-check-input(type='radio', name='status', id='rd-public' checked)
                | Phòng chung
            .col-4.form-check
              label.form-check-label
                input.form-check-input(type='radio', name='status')
                | Phòng riêng tư
          label#lb-error-create-room
        .modal-footer
          button.btn.btn-secondary(type='button', data-dismiss='modal') Hủy
          button.btn.btn-primary(type='button', id='create-room') Tạo
    

    //Modal Create nickname
    #create-nickname-modal.modal.fade.show(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', style='display: block; padding-right: 17px;',data-keyboard="false",data-backdrop="static")
     .modal-dialog.cascading-modal.modal-avatar.modal-sm(role='document')
     
      .modal-content
       // Header
       .modal-header
        img.rounded-circle.img-responsive(src='https://mdbootstrap.com/img/Photos/Avatars/img%20%281%29.jpg', alt='Avatar photo')
       // Body
       .modal-body.text-center.mb-1
        h5.mt-1.mb-2 Nickname
        .md-form.ml-0.mr-0
          input#nickname.form-control.ml-0(type='text')
          label.ml-0(for='nickname', id="lb-error-create-nickname") Nhập Nickname của bạn
        .text-center.mt-4
          button.btn.btn-cyan.waves-effect.waves-light(id='create-nickname',disabled)
            | Tạo
            i.fas.fa-sign-in.ml-1

   
